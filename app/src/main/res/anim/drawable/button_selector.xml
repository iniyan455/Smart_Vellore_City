<selector xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="wrap_content"
    android:layout_width="wrap_content">
    <item>
        <layer-list>
            <item android:left="5dp"
                android:right="5dp"
                android:top="5dp">
                <shape android:shape="rectangle" >
                    <corners android:radius="4dp" />
                    <solid android:color="#1fb6a2" />
                </shape>
            </item>
            <item android:bottom="2dp"
                android:left="0dp"
                android:right="0dp">
                <shape
                    android:shape="rectangle" >
                    <gradient
                        android:angle="270"
                        android:endColor="#1fb6a2"
                        android:startColor="#1fb6a2" />
                    <padding
                        android:bottom="10dp"
                        android:left="10dp"
                        android:right="10dp"
                        android:top="10dp" />
                </shape>
            </item>
        </layer-list>
    </item>
</selector>
