<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardElevation="6dp"
        android:id="@+id/cards"
        app:cardBackgroundColor="@color/white"
        android:layout_margin="6dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_margin="4dp">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_gravity="center"
                android:padding="4dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Report Type : "
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:textSize="16sp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Complaint"
                    android:textColor="@color/colorPrimary"
                    android:layout_marginLeft="12dp"
                    android:textStyle="bold"
                    android:id="@+id/report_type"
                    android:textSize="16sp"/>


            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="0.6dp"
                android:background="@color/black"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_gravity="center"
                android:padding="4dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Faculty Name -"
                    android:textColor="@color/black"
                    android:textSize="16sp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Iniyan Arul"
                    android:textColor="@color/black"
                    android:layout_marginLeft="12dp"
                    android:textStyle="bold"
                    android:id="@+id/student_name"
                    android:textSize="16sp"/>


            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_gravity="center"
                android:padding="4dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Date - "
                    android:textColor="@color/black"
                    android:textSize="16sp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="26-12-2018"
                    android:id="@+id/report_date"
                    android:textColor="@color/black"
                    android:layout_marginLeft="12dp"
                    android:textStyle="bold"
                    android:textSize="16sp"/>


            </LinearLayout>



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
               android:layout_gravity="center"
                android:gravity="center"
                android:padding="4dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Description "
                    android:textColor="@color/black"
                    android:textSize="16sp"
                    android:id="@+id/reportdescription"
                    android:drawableRight="@drawable/arrow_down"/>


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/privacy_pol_first"
                    android:textColor="@color/black"
                    android:textSize="16sp"
                    android:id="@+id/desc"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:padding="4dp"
                    android:textStyle="italic"
                    android:visibility="gone" />

                <Button
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Reply"
                    android:id="@+id/reply"
                    android:visibility="gone"
                    android:textColor="@color/white"
                    android:elevation="4dp"
                    android:background="@drawable/roundcorner_red"
                    />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:id="@+id/sendlayout"
                    android:visibility="gone"
                    android:weightSum="4">
                    <EditText
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:hint="Enter your reply"
                        android:textColorHint="@color/gray_btn_bg_color"
                        android:layout_weight="3"
                        android:textColor="@color/black"
                        android:id="@+id/replytext"/>

                 <Button
                     android:layout_width="wrap_content"
                     android:layout_height="wrap_content"
                     android:text="Send"
                     android:id="@+id/sendbutton"
                     android:textColor="@color/white"
                     android:background="@drawable/roundcorner_red"/>
                </LinearLayout>

            </LinearLayout>




        </LinearLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>